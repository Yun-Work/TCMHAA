<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 硬體特性（相機可選） -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- ✅ 權限宣告 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Android 13+ 通知權限 -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <!-- Android 13+ 讀取相簿（選圖用） -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />

    <!-- Android 12 及以下讀取相簿 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- 網路 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 如需開機後重排提醒，之後可解註這行並實作對應 Receiver -->
    <!-- <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TCMHAA"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- 🔐 登入 (啟動入口，需要 exported=true 因含 intent-filter) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 其他畫面（無 intent-filter，不需 exported 額外指定） -->
        <activity android:name=".ForgetActivity" />
        <activity android:name=".VerifyActivity" />
        <activity android:name=".Forget12Activity" />
        <activity android:name=".CheckActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".MainhealthyActivity" />
        <activity android:name=".WarningActivity" />
        <activity android:name=".PhotoActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name="._aMainActivity" />
        <activity android:name="._bMainActivity" />
        <activity android:name="._cMainActivity" />
        <activity android:name="._dMainActivity" />
        <activity android:name="._dProfileActivity" />
        <activity android:name="._dTimeActivity" />
        <activity android:name="._dNotifySettingsActivity" />
        <activity android:name="._dPrivacyActivity" />
        <activity android:name="._dAboutActivity" />

        <!-- 排程觸發的接收器（無 intent-filter 可設 exported=false） -->
        <receiver
            android:name=".NotificationReceiver"
            android:exported="false" />

        <!-- FileProvider（Camera/分享檔案用） -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 若未來要接 BOOT_COMPLETED 來重排提醒，加入對應 Receiver
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        -->
    </application>

</manifest>
