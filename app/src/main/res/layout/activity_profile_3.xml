<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- 確認可刪 -->
    <!-- 左上角 Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/newlogo"
        android:contentDescription="App Logo" />

    <!-- 標題：個人資料表 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="個人資料表"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#8E9CD6" />

    <!-- 姓名 -->
    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:text="姓名"
        android:textColor="#444"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/nameLabel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:background="#EEEEEE"
        android:hint="請輸入姓名"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- 性別 -->
    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:text="性別"
        android:textColor="#444"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 出生年月日 -->
    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderLabel"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="男" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />
    </RadioGroup>
    <!-- 可選：讓它像按鈕一樣 --><!-- 必須：讓它可以點擊 -->
    <TextView
        android:id="@+id/birthdayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderGroup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="false"
        android:minHeight="48dp"
        android:text="出生年月日(YYYY/MM/DD)"
        android:textColor="#8E9CD6"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/birthdayEditText"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/birthdayLabel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:background="#EEEEEE"
        android:hint="YYYY/MM/DD"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- 確認按鈕 -->
    <!--android:layout_marginStart="40dp"-->
    <!--少了這句就可以對齊右側了-->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/birthdayEditText"
        android:layout_alignEnd="@id/birthdayEditText"
        android:layout_marginTop="28dp"
        android:backgroundTint="#56C8D8"
        android:text="確認"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
