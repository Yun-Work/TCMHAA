<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Forget12Activity">

    <!-- 左上角 Logo（可替換成你的圖檔） -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/newlogo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:contentDescription="logo"/>

    <!-- 標題：修改密碼 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密碼"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#7A78B4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- 標籤：輸入新密碼 -->
    <TextView
        android:id="@+id/tvNewPwdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輸入新密碼"
        android:textSize="14sp"
        android:textColor="#7A78B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"/>

    <!-- 新密碼輸入 -->
    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="請輸入新密碼"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewPwdLabel"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"/>

    <!-- 標籤：再次確認密碼 -->
    <TextView
        android:id="@+id/tvConfirmPwdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次確認密碼"
        android:textSize="14sp"
        android:textColor="#7A78B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNewPassword"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"/>

    <!-- 確認密碼輸入 -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="請再輸入一次新密碼"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPwdLabel"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"/>

    <!-- 右側確認按鈕 -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:text="確認"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="@color/maincolor"
    app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="28dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#BDBDBD"
        android:text="返回"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnConfirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>
