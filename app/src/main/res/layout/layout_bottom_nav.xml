<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="#000000"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"

        android:weightSum="4">

        <!-- A：健康偵測 -->
        <LinearLayout
            android:id="@+id/nav_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/healthy_1"
                android:tintMode="src_in"
                android:contentDescription="健康偵測" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="健康偵測"
                android:textColor="#56C8D8"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- B：健康分析 -->
        <LinearLayout
            android:id="@+id/nav_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/healthy_2"
                android:tintMode="src_in"
                android:contentDescription="健康分析" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康分析"
                android:textSize="17sp"
                android:textColor="#56C8D8"
                android:paddingTop="3dp"/>
        </LinearLayout>

        <!-- C：歷史 -->
        <LinearLayout
            android:id="@+id/nav_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/healthy_3"
                android:tintMode="src_in"
                android:contentDescription="歷史" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歷史"
                android:textSize="17sp"
                android:textColor="#56C8D8"
                android:paddingTop="3dp"/>
        </LinearLayout>

        <!-- D：設定 -->
        <LinearLayout
            android:id="@+id/nav_d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/healthy_4"
                android:tintMode="src_in"
                android:contentDescription="設定" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="設定"
                android:textSize="17sp"
                android:textColor="#56C8D8"
                android:paddingTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
