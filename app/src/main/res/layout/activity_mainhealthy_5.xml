<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 上方內容 -->
    <LinearLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newlogo"
            android:layout_gravity="center"
            android:contentDescription="健康圖示" />

        <!-- 標題 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康分析"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#9090D8"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 選擇照片按鈕 -->
    <Button
        android:id="@+id/buttonChoosePhoto"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="選擇照片"
        android:textSize="20sp"
        android:textColor="#003060"
        android:backgroundTint="#56C8D8"
        android:layout_below="@id/topContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <!-- 拍攝照片按鈕 -->
    <Button
        android:id="@+id/buttonTakePhoto"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="拍攝照片"
        android:textSize="20sp"
        android:textColor="#003060"
        android:backgroundTint="#56C8D8"
        android:layout_below="@id/buttonChoosePhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- 底部導覽欄 -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#000000"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/nav_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/healthy_1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康偵測"
                    android:textSize="17sp"
                    android:textColor="#6E7BA2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/healthy_2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康分析"
                    android:textSize="17sp"
                    android:textColor="#6E7BA2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/healthy_3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歷史"
                    android:textSize="17sp"
                    android:textColor="#6E7BA2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/healthy_4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="設定"
                    android:textSize="17sp"
                    android:textColor="#6E7BA2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
