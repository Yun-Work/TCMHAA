<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo" android:layout_width="72dp" android:layout_height="72dp"
                android:src="@drawable/newlogo" android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/btnPickRange"
                android:layout_width="220dp" android:layout_height="48dp"
                android:text="@string/btn_pick_range" android:textSize="18sp"
                android:layout_marginTop="12dp" />

            <FrameLayout
                android:id="@+id/blockChart"
                android:layout_width="match_parent" android:layout_height="340dp"
                android:layout_marginTop="16dp"
                android:background="@color/placeholderGray">
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/label_history_chart" android:textSize="22sp"
                    android:textColor="@color/placeholderText" android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvTextResult"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/label_text_result" android:textSize="18sp"
                android:textColor="@color/placeholderText"
                android:layout_marginTop="16dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="end" android:layout_marginTop="16dp">
                <ImageButton
                    android:id="@+id/btnDownload"
                    android:layout_width="44dp" android:layout_height="44dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/stat_sys_download_done"
                    android:contentDescription="@string/btn_download" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
